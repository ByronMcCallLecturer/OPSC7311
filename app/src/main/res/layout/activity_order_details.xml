<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderDetailsActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="325dp"
        android:layout_height="247dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/starsuckslogo" />

    <TextView
        android:id="@+id/txtPlacedOrder"
        android:layout_width="251dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/you_ordered"
        android:textColor="@color/starbucks_green"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgOrderedDrink"
            android:layout_width="276dp"
            android:layout_height="235dp"
            android:layout_gravity="center_horizontal"
            tools:srcCompat="@tools:sample/avatars" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="258dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="@string/you_are"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtCell"
            android:layout_width="256dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="@string/cellphone"
            android:inputType="number" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:clickable="true"
            android:src="@drawable/drink"
            app:fabCustomSize="60dp"
            app:maxImageSize="48dp"
            app:useCompatPadding="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

    </LinearLayout>
</LinearLayout>